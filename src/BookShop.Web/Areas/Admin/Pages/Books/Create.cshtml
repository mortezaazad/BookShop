@page
@model BookShop.Web.Pages.Books.CreateModel
@{
}
<h2>New Book</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.CoverImage" class="col-form-label"></label>
                <input asp-for="Input.CoverImage" class="form-control" />
                <span asp-validation-for="Input.CoverImage " class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Name" class="col-form-label"></label>
                <input asp-for="Input.Name" class="form-control" type="text"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Description" class="col-form-label"></label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Author" class="col-form-label"></label>
                <input asp-for="Input.Author" class="form-control" />
                <span asp-validation-for="Input.Author" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Price" class="col-form-label"></label>
                <input asp-for="Input.Price" class="form-control" />
                <span asp-validation-for="Input.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Pages" class="col-form-label"></label>
                <input asp-for="Input.Pages" class="form-control" />
                <span asp-validation-for="Input.Pages" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Year" class="col-form-label"></label>
                <input asp-for="Input.Year" class="form-control" />
                <span asp-validation-for="Input.Year" class="text-danger"></span>
            </div>
            <button class="btn btn-primary">Save</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}